<script type="text/javascript" src="/assets/js/FuelsLogic.js"></script>


<div id="fuelEntry">
  <div class="col text-center">
  <a href="/fuel"><button type="submit" class="btn btn-primary" id="AddFuel">Add New Fuel</button></a>
  </div>
  {{#each fuels}}

    <a href="/fuel/{{id}}">
      <div class="lineItem" data-id="{{id}}">
        <hr>
        <h6>{{#intl locales="en-US"}}{{formatDate purchaseDate units="day" units="month" units="year"}}{{/intl}}</h6>
        <p>{{ gasStation}}</p>
        <p>${{formatNumber pricePerGallon}}</p>

      </div>
    </a>
  {{/each}}


</div>